<!DOCTYPE html>
<html>
  <head>
    <title>Alleviato</title>
    <%= csrf_meta_tags %>
      <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' %>
        <%= stylesheet_link_tag   'https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand navbar-dark bg-dark">
    <a class="navbar-brand" href="#">Alleviato</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample02" aria-controls="navbarsExample02" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse">
      <ul class="navbar-nav">
        <li>
            <l1><%= link_to "Home", root_path %></l1>
        </li>
      </ul>
    </div>
    <div class="btn-group">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Features
  </button>
  <ul class="dropdown-menu">
      <li><%= link_to "Share Books", books_path ,class: "link" %></li>
      <li><%= link_to "Question Papers", new_user_registration_path,class: "link"  %></li>
      <li><%= link_to "Study Sessions", tutors_path ,class: "link" %></li>
      <li><%= link_to "Order Items",  new_user_registration_path,class: "link" %></li>
  </ul>
</div>
    <div>
      <ul class="navbar-brand">


        <% if user_signed_in? %>
          <l1><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></l1>
        <% else %>
          <l1><%= link_to "Log In", new_user_session_path %></l1>
            <l1><%= link_to "Sign Up", new_user_registration_path %></l1>
        <% end %>
      </ul>
    </div>
  </nav>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
    <div class="container">
    <%= yield %>
  </div>
  </body>
</html>
